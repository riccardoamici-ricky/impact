<div class="container">
  <div class="name">
    <strong><%= @user.username.upcase %>'S IMPACT</strong>
  </div>
</div>
<div class="bg-photo">
  <img src="https://i.ibb.co/djpMs9g/showus.png" class="user-bg">
</div>
<div class="container">
  <div class="user-details">
    <div class="user-photo">
      <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, crop: :fill, class: "avatar-myprofile" %>
      <% end %>
    </div>
    <div class="user-name">
      <strong><%= @user.username %></strong><br>
      Joined <%= @user.created_at.to_date.to_formatted_s(:long) %><br>
      <strong>Followers:</strong> <%= @user.followers.count %> | <strong>Following:</strong> <%= @user.followees.count %>
    </div>
  </div>
  <section id="follow-unfollow">
    <% if current_user.followees.include?(@user) %>
        <h5><%= button_to "Unfollow", unfollow_user_path, method: "POST" %></h5>
    <% else %>
        <h5><%= button_to "Follow", follow_user_path, method: "POST"  %></h5>
    <% end%>
    <br>
  </section>
  <div class="tabs">
    <nav class="tabs-profile">
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link single-nav-item" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="false">Home</a>
        <a class="nav-item nav-link active single-nav-item" id="nav-impact-tab" data-toggle="tab" href="#nav-impact" role="tab" aria-controls="nav-impact" aria-selected="true">Impact</a>
        <a class="nav-item nav-link single-nav-item" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Contact</a>
      </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <!-- ALL THE EVENTS JOINED -->
      </div>
      <div class="tab-pane fade show active" id="nav-impact" role="tabpanel" aria-labelledby="nav-impact-tab">
         <% @user.posts.each do |post| %>
          <div class="title-post">
            <h1 class="title-post"><%= post.title.upcase %></h1>
          </div>
          <div class="post-content">
            <%= post.content %>
          </div>
       <% end %>
      </div>
      <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
        <!-- ALL THE POSTS LIKED -->
      </div>
    </div>
  </div>
</div>









  <% @user.followers.each do |follower| %>
    <%= cl_image_tag follower.photo.key, crop: :fill, class: "avatar"  %>
    <%= follower.username %><%= follower.created_at %>
  <% end %>
