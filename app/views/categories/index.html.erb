<div class="container">
  <div class="show-card">
     <div class="search-form-control form-group">
        <%= form_tag method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search for products ..."%>
      </div>
    <% end %>

  <% @categories.each do |category| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to category.name.upcase, category_path(category) %>
    </div>
  <% end %>
  </div>
</div>
