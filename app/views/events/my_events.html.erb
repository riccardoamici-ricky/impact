<div class="container">
  <h2>My Events</h2>




  <% if @events.any? %>
    <ul>
      <% @events.each do |event| %>
      <li><%= event.title%>
      <%= link_to edit_event_path(event), method: :get do %>
          <i class="fas fa-pencil-alt"></i>
          <% end %> ||
      <%= link_to event_path(event), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
      </li>
    <% end %>
    </ul>

   <% else %>
    <p> You have no events to display ğŸ˜¢ </p>
  <% end %>







