<div class="container">
  <div class="daily-quote">
    <i class="fas fa-quote-left"></i><br><h1 class="quote">We can't control everything that happens, but we can change our experience of those things</h1><i class="fas fa-quote-right"></i>
  </div>

  <div class="posts">
    <% @posts.each do |post| %>
      <div class="post">
        <div class="title-post">
          <%= link_to post.title.upcase, post_path(post) %>
        </div>
        <div class="post-content">
          <%= post.content %>
        </div>
      </div>
      <div class="comments">
          <ul>
            <% post.comments.each do |comment| %>
              <li style="background-color: #F4F4F4; margin-top: 5px">
                <% if comment.user.photo.attached? %>
                  <%= cl_image_tag comment.user.photo.key, crop: :fill, class: "avatar" %>
                <% end %>
                <%= comment.user.username %>
                <%= comment.content %>
              </li>
            <% end %>
          </ul>
           <%= simple_form_for [ post, @comment ], remote: true do |f| %>
           <%= f.input :content %>
           <%= f.submit "Comment", class: "btn btn-primary" %>
           <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to 'NEW', new_post_path, class: "btn-landing" %>
</div>
