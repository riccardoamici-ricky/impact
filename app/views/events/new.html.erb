

<div class="container">
  <div class="event-card"></div>
  <h1>Create a new event</h1>
  <%= simple_form_for [@user, @event] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category, collection: Event.categories %>
    <%= f.input :address %>
    <%= f.input :neighbourhood, collection: Event.neighbourhoods %>
    <%= f.input :start_time, as: :string, type: :text, input_html: {class: "datepicker"}  %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "POST EVENT", class: "btn btn-flat event" %>
  <% end %>
</div>

