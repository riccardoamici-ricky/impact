<div class="container">
  <h2>My Events</h2>

  <% if @events.any? %>
    <ul>
    <% @events.each_with_index(1) do |event, index| %>
      <li>Event#<%= index %> | Title: <%= event.title %> -  <%= event.category %>
        <%= link_to event_path(event), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>
    </ul>

  <% else %>
    <p> You have no events to display ğŸ˜¢ </p>
  <% end %>


